{
  "exclude": [
    "node_modules",
    "config",
    "lib",
    "esm",
    "cjs",
    "jest.config.js",
    "lib/**/*",
    "esm/**/*",
    "cjs/**/*"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ES2015", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "baseUrl": "."
  }
}
